/**
* @name base16 {{scheme-name}}
* @author {{scheme-author}}
* @description base16 {{scheme-name}} theme
**/

:root {
  --base00: #{{base00-hex}}; /* Black */
  --base01: #{{base01-hex}}; /* Bright Black */
  --base02: #{{base02-hex}}; /* Grey */
  --base03: #{{base03-hex}}; /* Brighter Grey */
  --base04: #{{base04-hex}}; /* Bright Grey */
  --base05: #{{base05-hex}}; /* White */
  --base06: #{{base06-hex}}; /* Brighter White */
  --base07: #{{base07-hex}}; /* Bright White */
  --base08: #{{base08-hex}}; /* Red */
  --base09: #{{base09-hex}}; /* Orange */
  --base0A: #{{base0A-hex}}; /* Yellow */
  --base0B: #{{base0B-hex}}; /* Green */
  --base0C: #{{base0C-hex}}; /* Cyan */
  --base0D: #{{base0D-hex}}; /* Blue */
  --base0E: #{{base0E-hex}}; /* Purple */
  --base0F: #{{base0F-hex}}; /* Magenta */
}

.theme-light, .theme-dark {

  /*********************************************/
  /*             Theme definitions             */
  /*********************************************/

  /* Obsidian colors */
  --color-red: #{{base08-hex}};
  --color-orange: #{{base09-hex}};
  --color-yellow: #{{base0A-hex}};
  --color-green: #{{base0B-hex}};
  --color-cyan: #{{base0C-hex}};
  --color-blue: #{{base0D-hex}};
  --color-purple: #{{base0E-hex}};
  --color-pink: pink;

  /* Background colors */
  --background-primary: #{{base00-hex}};
  --background-secondary: #{{base01-hex}};
  --selection-background-color: #{{base02-hex}};

  /* Border colors */
  --border-color-primary: #{{base02-hex}};
  --border-color-secondary: #{{base03-hex}};

  /* Text colors */
  --text-color: #{{base05-hex}};
  --text-color-accent: white;
  --text-color-muted-dark: #{{base03-hex}}; /* Separators, indent */
  --text-color-muted-light: #{{base04-hex}}; /* Checklist done, indent */

  /* Main accent colors */
  --accent-color-main: var(--color-blue);
  --accent-color-secondary: var(--color-purple);
  --accent-color-hover: var(--color-orange);

  /* Obsidian accent color HSL (accent color main) */
  --accent-h: {{base0D-hsl-h}};
  --accent-s: {{base0D-hsl-s}};
  --accent-l: {{base0D-hsl-l}};
  --canvas-color: {{base0D-rgb-r}}, {{base0D-rgb-g}}, {{base0D-rgb-b}} !important;

  /* Code section theme */
  --code-important: var(--color-yellow);

  /* NOTE: this is a mix of VSCode and Neovim themes */
  --code-boolean: #{{base09-hex}};
  --code-builtin: #{{base09-hex}};
  --code-comment: #{{base03-hex}};
  --code-definition: #{{base0D-hex}};
  --code-keyword: #{{base08-hex}};
  --code-operator: #{{base0C-hex}};
  --code-property: #{{base0D-hex}};
  --code-parentheses: #{{base05-hex}};
  --code-string: #{{base0B-hex}};
  --code-value: #{{base0E-hex}};
  --code-variable: #{{base05-hex}};


  /*********************************************/
  /*               Theme generics              */
  /*********************************************/

  /* UI navigation colors */

  /* Titlebar background & others */
  --titlebar-background: var(--background-secondary);
  --titlebar-background-focused: var(--background-primary);
  --modal-background: var(--background-secondary);

  --border-color: var(--border-color-primary);
  --modal-border-color: var(--border-color-primary);
  --prompt-border-color: var(--border-color-primary);
  --background-modifier-form-field: var(--background-secondary);

  /* Interactive UI elements */
  --interactive-normal: var(--background-secondary);
  --interactive-hover: var(--border-color-primary);
  --interactive-accent: var(--accent-color-main);

  /* Generic UI element */
  --background-modifier-hover: var(--selection-background-color);
  --background-modifier-active-hover: red;
  --background-modifier-border: var(--border-color-primary);
  --background-modifier-border-focus: var(--border-color-secondary);
  --background-modifier-border-hover: var(--border-color-secondary);

  /* File navigation */
  --nav-item-color: var(--text-color);
  --nav-item-color-active: var(--text-color-accent);
  --nav-item-color-hover: var(--text-color-accent);
  --nav-item-color-selected: red;
  --nav-item-color-highlighted: var(--accent-color-secondary);

  --nav-item-background-hover: var(--selection-background-color);
  --nav-item-background-active: var(--accent-color-main);
  --nav-item-background-selected: red;

  /* Tabs */
  --tab-background-active: var(--background-primary);
  --tab-text-color-focused: var(--text-color);
  --tab-text-color-focused-active: var(--text-color);
  --tab-divider-color: var(--selection-background-color);
  --tab-outline-color: var(--border-color-primary);
  --tab-text-color: var(--border-color-primary);
  --tab-text-color-active: var(--text-color);
  --tab-text-color-focused-highlighted: red;

  /* Text element colors */

  /* Header colors */
  /* They follow the rainbow order, starting from the darkest color */
  --h1-color: var(--color-purple);
  --h2-color: var(--color-blue);
  --h3-color: var(--color-green);
  --h4-color: var(--color-yellow);
  --h5-color: var(--color-orange);
  --h6-color: var(--color-red);
  --inline-title-color: var(--text-color);

  /* Text */
  --text-normal: var(--text-color);
  --text-muted: var(--text-color); /* UI symbols */
  --checklist-done-color: var(--text-color-muted-light);
  --text-faint: var(--text-color-muted-light);
  --text-on-accent: var(--text-color-accent);
  --text-on-accent-inverted: var(--background-primary);
  --text-accent: var(--accent-color-main);
  --text-accent-hover: red;
  --text-highlight-bg: var(--accent-color-main);

  --text-success: var(--color-green);
  --text-warning: var(--color-yellow);
  --text-error: var(--color-red);

  --italic-color: var(--accent-color-secondary);
  --bold-color: var(--accent-color-secondary);
  --text-selection: var(--selection-background-color);

  /* Lists, blockquotes & other elements */
  --list-marker-color: var(--accent-color-main);
  --blockquote-border-color: var(--accent-color-main);
  --hr-color: var(--text-color-muted-dark); /* Horizontal delimiter */
  --indentation-guide-color: var(--text-color-muted-dark);
  --indentation-guide-color-active: var(--text-color-muted-light);
  --selection-border-color: var(--accent-color-hover);

  /* Links */
  --link-color: var(--accent-color-main);
  --link-external-color: var(--accent-color-main);
  --link-unresolved-color: var(--red);

  --link-color-hover: var(--accent-color-hover);
  --link-external-color-hover: var(--accent-color-hover);
  --link-unresolved-color-hover: var(--red);

  /* Indentation guides */
  --nav-indentation-guide-color: var(--border-color-secondary);
  --nav-collapse-icon-color: var(--border-color-secondary);
  --nav-collapse-icon-color-collapsed: var(--border-color-secondary);

  /* UI element colors */

  /* Icons: default to text color */

  /* Checkbox colors */
  --checkbox-color: var(--accent-color-main);
  --checkbox-color-hover: var(--accent-color-hover);
  --checkbox-border-color: var(--text-color-muted-light);
  --checkbox-border-color-hover: var(--accent-color-hover);

  /* Sliders */
  --slider-track-background: var(--background-secondary);
  --slider-thumb-border-color: var(--black);

  /* Tables */
  --table-header-color: var(--text-color);
  --table-border-color: var(--border-color-primary);
  --table-selection: var(--selection-background-color);
  --table-selection-border-color: var(--selection-border-color);
  --table-drag-handle-color: var(--selection-background-color);
  --table-drag-handle-color-active: var(--selection-background-color);

  /* Tags */
  --tag-color: var(--accent-color-main);
  --tag-color-hover: var(--accent-color-main);
  --tag-background: var(--text-color-muted-dark);
  --tag-background-hover: var(--text-color-muted-light);

  /* Toggles */
  --toggle-thumb-color: var(--text-color-accent);

  /* Properties */
  --metadata-label-text-color: var(--text-color);
  --metadata-input-text-color: var(--text-color);

  /* Plugins */

  /* Graph */
  --graph-text: var(--text-color);
  --graph-line: var(--border-color);
  --graph-node: var(--accent-color-main);
  --graph-node-unresolved: var(--border-color-primary);
  --graph-node-focused: var(--accent-color-hover);
  --graph-node-tag: var(--accent-color-secondary);
  --graph-node-attachment: var(--accent-color-main);

  /* Search: inherits correct colors */

  /* Code background */
  --code-background: var(--background-secondary);
  --tab-text-color-focused-active-current: var(--text-color-accent);
}

/* Code section detailed theme */

/* Default code block: parentheses, brackets, braces */
.cm-hmd-codeblock {
  color: var(--code-parentheses);
}

.cm-atom {
  color: var(--code-boolean);
  font-weight: bold;
}

.cm-builtin {
  color: var(--code-builtin);
  font-style: italic;
}

.cm-comment {
  color: var(--code-comment);
  font-style: italic;
}

/* Class / function / variable name definition */
.cm-def {
  color: var(--code-definition);
}

.cm-keyword {
  color: var(--code-keyword);
  font-weight: bold;
  font-style: italic;
}

.cm-number {
  color: var(--code-value);
}

.cm-operator {
  color: var(--code-operator);
}

.cm-property {
  color: var(--code-property);
}

.cm-string {
  color: var(--code-string);
}

.cm-variable {
  color: var(--code-variable);
}
